<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_task"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#ff7f21"
    android:layoutDirection="ltr"
    android:padding="10dp">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/icon_item_task"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_goneMarginEnd="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/name_item_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="task name"
        android:textColor="#7D000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/icon_item_task"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_item_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Date"
        android:textColor="#7D000000"
        app:layout_constraintStart_toStartOf="@id/name_item_task"
        app:layout_constraintTop_toBottomOf="@+id/name_item_task" />

<ImageView
    android:id="@+id/share_item_task"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_share"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>